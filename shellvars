export LC_CTYPE=en_US.UTF-8
export LANG=en_US.UTF-8

###################
# Editor
###################

# Set textmate as our default command line editor
# export EDITOR="/usr/local/bin/mate -w"
export GIT_EDITOR=vim
export VISUAL=vim
export EDITOR=vim
export ALTERNATE_EDITOR='emacs -nw'

#########################################################################
# Tool paths
#########################################################################

#########################################################################
# Tool settings
#########################################################################
export CLICOLOR=true

export HISTSIZE=1000               # How many lines of history to keep in memory
export SAVEHIST=$HISTSIZE          # Number of history entries to save to disk
export HISTCONTROL=ignoredups      # Make some commands not show up in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:reset:clear:date:* --help"
export HISTDUP=erase               # Erase duplicates in the history file

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

export HOMEBREW_NO_AUTO_UPDATE=1

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init --path)"

export https_proxy=http://127.0.0.1:7890 http_proxy=http://127.0.0.1:7890 all_proxy=socks5://127.0.0.1:7890

export JAVA_HOME=`/usr/libexec/java_home -v 1.8.0_311`